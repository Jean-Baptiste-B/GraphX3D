<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootBorderPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="600.0"
            prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.40"
            fx:controller="com.yahiab.graphix.controller.RootLayoutController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Ouvrir">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#actionButton3D" text="L'éditeur graphique 3D"/>
                        <MenuItem mnemonicParsing="false" onAction="#actionButton2D" text="L'éditeur graphique 2D"/>
                        <MenuItem mnemonicParsing="false" onAction="#actionButtonDemos" text="Animations"/>
                        <MenuItem mnemonicParsing="false" onAction="#actionButtonQuiz" text="Cours et Quiz"/>
                        <MenuItem mnemonicParsing="false" onAction="#actionButtonPDF" text="Patrons des formes 3D"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Quitter"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Options">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleHelp" text="Aide"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="A propos"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <AnchorPane fx:id="rootAnchorLayout" prefHeight="768.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
            <children>
                <StackPane fx:id="stackPane" layoutX="150.0" layoutY="50.0" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                   <Pane fx:id="pane" prefHeight="200.0" prefWidth="200.0" StackPane.alignment="CENTER"/>
                   <GridPane alignment="CENTER">
                       <columnConstraints>
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                       </columnConstraints>
                       <rowConstraints>
                           <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                           <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                           <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                       </rowConstraints>
                       <children>
                           <Button fx:id="btn3DApp" alignment="CENTER" contentDisplay="CENTER" maxHeight="300.0"
                                   maxWidth="300.0" minHeight="150.0" minWidth="300.0" mnemonicParsing="false"
                                   onAction="#actionButton3D" prefHeight="150.0" prefWidth="300.0"
                                   GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                               <GridPane.margin>
                                   <Insets bottom="15.0" top="15.0"/>
                               </GridPane.margin>
                           </Button>
                           <Button fx:id="btnDemos" alignment="CENTER" contentDisplay="CENTER" maxHeight="300.0"
                                   maxWidth="300.0" minHeight="150.0" minWidth="300.0" mnemonicParsing="false"
                                   onAction="#actionButtonDemos" prefHeight="150.0" prefWidth="300.0"
                                   GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                               <GridPane.margin>
                                   <Insets bottom="15.0" top="15.0"/>
                               </GridPane.margin>
                           </Button>
                           <Button fx:id="btn2DApp" alignment="CENTER" contentDisplay="CENTER" maxHeight="300.0"
                                   maxWidth="300.0" minHeight="150.0" minWidth="300.0" mnemonicParsing="false"
                                   onAction="#actionButton2D" prefHeight="150.0" prefWidth="300.0"
                                   GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                               <GridPane.margin>
                                   <Insets bottom="15.0" top="15.0"/>
                               </GridPane.margin>
                           </Button>
                           <Button fx:id="btnQuiz" alignment="CENTER" contentDisplay="CENTER" maxHeight="300.0"
                                   maxWidth="300.0" minHeight="150.0" minWidth="300.0" mnemonicParsing="false"
                                   onAction="#actionButtonQuiz" prefHeight="150.0" prefWidth="300.0"
                                   GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                                   GridPane.valignment="CENTER">
                               <GridPane.margin>
                                   <Insets bottom="15.0" top="15.0"/>
                               </GridPane.margin>
                           </Button>
                           <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="300.0" maxWidth="300.0"
                                   minHeight="150.0" minWidth="300.0" mnemonicParsing="false"
                                   onAction="#actionButtonVideos" prefHeight="150.0" prefWidth="300.0"
                                   GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                               <GridPane.margin>
                                   <Insets bottom="15.0" top="15.0"/>
                               </GridPane.margin>
                           </Button>
                           <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="300.0" maxWidth="300.0"
                                   minHeight="150.0" minWidth="300.0" mnemonicParsing="false"
                                   onAction="#actionButtonPDF" prefHeight="150.0" prefWidth="300.0"
                                   GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2"
                                   GridPane.valignment="CENTER">
                               <GridPane.margin>
                                   <Insets bottom="15.0" top="15.0"/>
                               </GridPane.margin>
                           </Button>
                       </children>
                   </GridPane>
               </children>
                </StackPane>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
